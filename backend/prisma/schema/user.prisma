enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  name     String?
  password String

  age         Int?
  gender      String?
  dateOfBirth DateTime?
  role        Role      @default(USER)

  @@map("users")
}